{
  "name": "ambry",
  "license": "MIT",
  "main": "./entry.js",
  "version": "1.0.0",
  "scripts": {
    "start": "APP_VARIANT=development expo start",
    "android": "APP_VARIANT=development expo run:android",
    "ios": "APP_VARIANT=development expo run:ios",
    "prebuild": "APP_VARIANT=development expo prebuild",
    "test": "jest --watchAll",
    "test:ci": "jest",
    "test:coverage": "jest --coverage",
    "lint": "expo lint",
    "doctor": "npx expo-doctor",
    "expo-upgrade": "npm install expo && npx expo install --fix",
    "android-preview": "npx eas build --platform android --profile preview --local",
    "ios-preview": "npx eas build --platform ios --profile preview --local",
    "codegen": "npx graphql-codegen --config codegen.ts",
    "codegen-watch": "npx graphql-codegen --config codegen.ts --watch",
    "generate-migrations": "npx drizzle-kit generate"
  },
  "expo": {
    "install": {
      "exclude": [
        "@react-native-community/slider",
        "@sentry/react-native"
      ]
    },
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "@react-hook/previous",
          "core-js",
          "drizzle-orm",
          "expo-sqlite-devtools",
          "immer",
          "react-native-track-player"
        ]
      }
    }
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": ["<rootDir>/test/jest-setup.ts"],
    "moduleNameMapper": {
      "^@test/(.*)$": "<rootDir>/test/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/graphql/client/**",
      "!src/app/**"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@react-hook/previous": "^1.0.1",
    "@react-native-community/slider": "5.0.1",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@sentry/react-native": "^7.4.0",
    "core-js": "^3.43.0",
    "drizzle-orm": "^0.44.2",
    "expo": "~54.0.27",
    "expo-background-task": "~1.0.10",
    "expo-blur": "~15.0.8",
    "expo-build-properties": "~1.0.10",
    "expo-constants": "~18.0.10",
    "expo-crypto": "~15.0.8",
    "expo-dev-client": "~6.0.20",
    "expo-device": "~8.0.10",
    "expo-drizzle-studio-plugin": "^0.2.1",
    "expo-file-system": "~19.0.17",
    "expo-font": "~14.0.9",
    "expo-haptics": "~15.0.8",
    "expo-image": "~3.0.11",
    "expo-linking": "~8.0.10",
    "expo-router": "~6.0.17",
    "expo-secure-store": "~15.0.8",
    "expo-splash-screen": "~31.0.12",
    "expo-sqlite": "~16.0.10",
    "expo-system-ui": "~6.0.9",
    "expo-task-manager": "~14.0.9",
    "immer": "^10.1.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-freeze": "^1.0.4",
    "react-native": "0.81.5",
    "react-native-edge-to-edge": "1.6.0",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-keyboard-controller": "1.18.5",
    "react-native-markdown-display": "^7.0.2",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-track-player": "5.0.0-alpha0",
    "react-native-worklets": "0.5.1",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.12.16",
    "@babel/core": "^7.26.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@parcel/watcher": "^2.5.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.1.10",
    "@types/react-test-renderer": "^19.1.0",
    "babel-plugin-inline-import": "^3.0.0",
    "better-sqlite3": "^12.5.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-prettier": "^5.2.5",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.14",
    "prettier": "^3.4.2",
    "react-native-svg-transformer": "^1.5.0",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  },
  "private": true,
  "trustedDependencies": [
    "@parcel/watcher",
    "@sentry/cli"
  ]
}
