{
  "name": "ambry",
  "license": "MIT",
  "main": "./entry.js",
  "version": "1.0.0",
  "scripts": {
    "start": "APP_VARIANT=development expo start",
    "android": "APP_VARIANT=development expo run:android",
    "ios": "APP_VARIANT=development expo run:ios",
    "prebuild": "APP_VARIANT=development expo prebuild",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "lint": "eslint src test --cache --cache-location=.expo/cache/eslint/",
    "lint:fix": "eslint src test --fix --cache --cache-location=.expo/cache/eslint/",
    "doctor": "npx expo-doctor",
    "expo:upgrade": "npm install expo && npx expo install --fix",
    "build:android:preview": "npx eas-cli build --platform android --profile preview --local",
    "build:ios:preview": "npx eas-cli build --platform ios --profile preview --local",
    "build:production": "npx eas-cli build --platform all --profile production",
    "build:android:production": "npx eas-cli build --platform android --profile production",
    "build:ios:production": "npx eas-cli build --platform ios --profile production",
    "submit": "npx eas-cli submit --platform all --profile production",
    "submit:ios": "npx eas-cli submit --platform ios --profile production",
    "submit:android": "npx eas-cli submit --platform android --profile production",
    "codegen": "npx graphql-codegen --config codegen.ts",
    "codegen:watch": "npx graphql-codegen --config codegen.ts --watch",
    "drizzle:generate-migrations": "npx drizzle-kit generate"
  },
  "expo": {
    "install": {
      "exclude": [
        "@react-native-community/slider",
        "@sentry/react-native"
      ]
    },
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "@react-hook/previous",
          "core-js",
          "drizzle-orm",
          "expo-sqlite-devtools",
          "immer",
          "react-native-track-player"
        ]
      }
    }
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/graphql/client/**",
      "!src/app/**",
      "!src/utils/crypto.ts",
      "!src/db/db.ts",
      "!src/types/**",
      "!src/styles/**",
      "!src/**/index.ts"
    ]
  },
  "dependencies": {
    "@expo/ui": "~55.0.0-beta.1",
    "@expo/vector-icons": "^15.0.2",
    "@react-hook/previous": "^1.0.1",
    "@react-native-community/slider": "5.1.1",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@sentry/react-native": "^7.4.0",
    "activity-tracker": "file:./modules/activity-tracker",
    "core-js": "^3.43.0",
    "drizzle-orm": "^0.45.1",
    "expo": "^55.0.0-preview.5",
    "expo-application": "~55.0.1",
    "expo-background-task": "~55.0.1",
    "expo-blur": "~55.0.1",
    "expo-build-properties": "~55.0.2",
    "expo-constants": "~55.0.1",
    "expo-crypto": "~55.0.1",
    "expo-dev-client": "~55.0.1",
    "expo-device": "~55.0.1",
    "expo-drizzle-studio-plugin": "^0.2.1",
    "expo-file-system": "~55.0.1",
    "expo-font": "~55.0.1",
    "expo-haptics": "~55.0.1",
    "expo-image": "~55.0.1",
    "expo-linking": "~55.0.2",
    "expo-router": "~55.0.0-beta.2",
    "expo-secure-store": "~55.0.1",
    "expo-splash-screen": "~55.0.1",
    "expo-sqlite": "~55.0.1",
    "expo-system-ui": "~55.0.1",
    "expo-task-manager": "~55.0.1",
    "graphql-request": "^7.4.0",
    "immer": "^11.1.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-freeze": "^1.0.4",
    "react-native": "0.83.1",
    "react-native-edge-to-edge": "1.6.0",
    "react-native-gesture-handler": "~2.30.0",
    "react-native-keyboard-controller": "1.20.4",
    "react-native-logs": "^5.5.0",
    "react-native-markdown-display": "^7.0.2",
    "react-native-reanimated": "~4.2.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.20.0",
    "react-native-svg": "15.15.1",
    "react-native-track-player": "5.0.0-alpha0",
    "react-native-worklets": "0.7.1",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.12.16",
    "@babel/core": "^7.26.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@parcel/watcher": "^2.5.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.2.2",
    "@types/react-test-renderer": "^19.1.0",
    "babel-plugin-inline-import": "^3.0.0",
    "better-sqlite3": "^12.5.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "eslint-config-expo": "~55.0.0",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "jest-expo": "~55.0.3",
    "prettier": "^3.4.2",
    "react-native-svg-transformer": "^1.5.0",
    "react-test-renderer": "^19.2.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.50.0"
  },
  "private": true,
  "trustedDependencies": [
    "@parcel/watcher",
    "@sentry/cli"
  ],
  "overrides": {
    "expo": "$expo"
  }
}
